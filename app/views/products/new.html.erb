<h1>ADD A NEW PRODUCT:</h1>

<%= form_tag "/products", method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>

<!--   <div>
    <%= label_tag :image %>
    <%= text_field_tag :url %>
  </div> -->

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

  <div>
    <%= label_tag :supplier_id %>
    <%= number_field_tag :supplier_id %>
  </div>

   <div>
    <%= submit_tag "Save Product" %>

  </div>

<% end %>