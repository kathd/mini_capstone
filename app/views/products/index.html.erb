<h1>ALL PRODUCTS:</h1>
<br>
<h4><a href="/products/random">Random Product</a></h4>
<br>
<p>
Sort Price: <a href="/products?sort=price&sort_order=asc">Low</a> <a href="/products?desc=price&sort_order=desc">High</a>
</p>
<br>
<% @products.each do |product| %>
<div class="container">
  <div class="row">
  <div class="col-sm-4">
    <div class="card" style="width: 15rem;">
      <img class="card-img-top" src="<%= product.images.first.url %>" alt="Card image cap">
      <div class="card-body">
        <h4 class="card-title"><%= product.name %></h4>
        <p class="card-text">$ <%= product.price %></p>
        <a href="/products/<%= product.id %>" class="btn btn-primary">VIEW</a>
        <button type="button" class="btn btn-primary">BUY</button>
      </div>
    </div>
  </div>
  </div>
</div>
<br><br>
<% end %>

